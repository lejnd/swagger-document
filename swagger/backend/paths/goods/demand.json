{
    "swagger": "2.0",
    "paths": {
        "/demand/search": {
            "post": {
                "tags": [
                    "Demand"
                ],
                "summary": "查询采购所有信息",
                "description": "列表按照发布时间倒序",
                "parameters": [
                    {
                        "$ref": "definitions/search/token.json"
                    },
                    {
                        "in": "body",
                        "name": "query",
                        "required": true,
                        "description": "查询条件",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "paging": {
                                    "$ref": "definitions/search/Paging.json"
                                },
                                "condition": {
                                    "type": "object",
                                    "description": "查询条件",
                                    "properties": {
                                        "name": {
                                            "type": "string",
                                            "description": "采购商名称"
                                        },
                                        "num": {
                                            "type": "string",
                                            "description": "采购编号"
                                        },
                                        "categoryName": {
                                            "type": "string",
                                            "description": "采购品类名称"
                                        },
                                        "publishStartTime": {
                                            "type": "string",
                                            "description": "发布时间起始范围 yyyy-MM-dd HH:mm:ss"
                                        },
                                        "publishEndTime": {
                                            "type": "string",
                                            "description": "发布时间结束范围 yyyy-MM-dd HH:mm:ss"
                                        },
                                        "approveStartTime": {
                                            "type": "string",
                                            "description": "审核时间起始范围 yyyy-MM-dd HH:mm:ss"
                                        },
                                        "approveEndTime": {
                                            "type": "string",
                                            "description": "审核时间结束范围 yyyy-MM-dd HH:mm:ss"
                                        },
                                        "state": {
                                            "type": "integer",
                                            "description": "状态：0：所有，1：待审核，2：进行中，3：已结束 "
                                        },
                                         "phone": {
                                            "type": "string",
                                            "description": "注册手机号"
                                        },
                                         "contactnumber": {
                                            "type": "string",
                                            "description": "联系电话"
                                        },
                                         "title": {
                                            "type": "string",
                                            "description": "标题"
                                        }
                                    }
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "返回符合搜索条件的所有信息",
                        "schema": {
                            "type": "object",
                            "description": "获取结果",
                            "properties": {
                                "msg": {
                                    "type": "string",
                                    "description": "获取成功"
                                },
                                "code": {
                                    "type": "string",
                                    "description": "成功编码 0",
                                    "required": true
                                },
                                "data": {
                                    "type": "object",
                                    "properties": {
                                        "pagination": {
                                            "$ref": "definitions/search/ResponsePaging.json"
                                        },
                                        "itemList": {
                                            "type": "array",
                                            "items": {
                                                "type": "object",
                                                "properties": {
                                                    "num": {
                                                        "type": "string",
                                                        "description": "货品供应编号"
                                                    },
                                                    "name": {
                                                        "type": "string",
                                                        "description": "供应商名称"
                                                    },
                                                    "address": {
                                                        "type": "string",
                                                        "description": "指定产地"
                                                    },
                                                    "category": {
                                                        "type": "string",
                                                        "description": "品类"
                                                    },
                                                    "standards": {
                                                        "type": "string",
                                                        "description": "规格要求"
                                                    },
                                                    "cnt": {
                                                        "type": "string",
                                                        "description": "采购数量"
                                                    },
                                                    "price": {
                                                        "type": "string",
                                                        "description": "心里价位 "
                                                    },
                                                    "publishTime": {
                                                        "type": "string",
                                                        "description": "发布时间 yyyy-MM-dd HH:mm:ss"
                                                    },
                                                    "approveTime": {
                                                        "type": "string",
                                                        "description": "审核时间 yyyy-MM-dd HH:mm:ss"
                                                    },
                                                    "status": {
                                                        "type": "string",
                                                        "description": "审核状态"
                                                    }
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/demand/batch/reject": {
            "post": {
                "tags": [
                    "Demand"
                ],
                "summary": "驳回采购信息",
                "parameters": [
                    {
                        "$ref": "definitions/search/token.json"
                    },
                    {
                        "in": "body",
                        "name": "reject",
                        "type": "object",
                        "required": true,
                        "schema": {
                            "type": "array",
                            "items": {
                                "type": "string",
                                "description": "信息 ID"
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "schema": {
                            "type": "object",
                            "properties": {
                                "msg": {
                                    "type": "string",
                                    "description": "成功：已驳回；失败：[供应商名称, ...] 驳回失败"
                                },
                                "code": {
                                    "type": "string",
                                    "description": "成功：0; 失败：1001",
                                    "required": true
                                }
                            }
                        }
                    }
                }
            }
        },
        "/demand/batch/approval": {
            "post": {
                "tags": [
                    "Demand"
                ],
                "summary": "审核采购信息",
                "parameters": [
                    {
                        "$ref": "definitions/search/token.json"
                    },
                    {
                        "in": "body",
                        "name": "approve",
                        "type": "object",
                        "required": true,
                        "schema": {
                            "type": "array",
                            "items": {
                                "type": "string",
                                "description": "信息 ID"
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "schema": {
                            "type": "object",
                            "properties": {
                                "msg": {
                                    "type": "string",
                                    "description": "成功：已审核；失败：[供应商名称, ...] 审核失败"
                                },
                                "code": {
                                    "type": "string",
                                    "description": "成功：0; 失败：1001",
                                    "required": true
                                }
                            }
                        }
                    }
                }
            }
        },
        "/demand/{infoId}": {
            "get": {
                "tags": [
                    "Demand"
                ],
                "summary": "获取采购信息详情",
                "parameters": [
                    {
                        "$ref": "definitions/search/token.json"
                    },
                    {
                        "in": "path",
                        "type": "string",
                        "required": true,
                        "name": "infoId",
                        "description": "信息 id"
                    }
                ],
                "responses": {
                    "200": {
                        "schema": {
                            "type": "object",
                            "properties": {
                                "msg": {
                                    "type": "string",
                                    "description": "获取成功"
                                },
                                "code": {
                                    "type": "string",
                                    "description": "成功：0",
                                    "required": true
                                },
                                "data": {
                                    "$ref": "definitions/goods/demand.json"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
