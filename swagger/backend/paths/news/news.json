{
    "swagger": "2.0",
    "paths": {
        "/news/search": {
            "post": {
                "tags": ["News"],
                "summary": "行情资讯列表查询",
                "parameters": [
                    {
                        "$ref": "#/definitions/Token"
                    },
                    {
                        "in": "body",
                        "name": "body",
                        "description": "行情资讯查询条件",
                        "required": true,
                        "schema": {
                            "$ref": "definitions/news/information-query-condition.json"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "行情资讯查询成功",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "msg": {
                                    "type": "string",
                                    "description": "成功信息"
                                },
                                "code": {
                                    "type": "string",
                                    "description": "成功编码 0",
                                    "required": true
                                },
                                "data": {
                                    "type": "object",
                                    "properties": {
                                        "Paging": {
                                            "$ref": "definitions/search/ResponsePaging.json"
                                        },
                                        "itemList": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "definitions/news/information-item.json"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },

        "/news/approval": {
            "post": {
                "tags": ["News"],
                "summary": "审核行情资讯",
                "parameters": [
                    {
                        "$ref": "#/definitions/Token"
                    },
                    {
                        "in": "body",
                        "name": "approval",
                        "type": "object",
                        "required": true,
                        "schema": {
                            "type": "array",
                            "items": {
                                "type": "integer",
                                "description": "资讯 ID"
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "审核返回结果",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "msg": {
                                    "type": "string",
                                    "description": "成功：已审核；失败：[资讯名称, ...] 审核失败"
                                },
                                "code": {
                                    "type": "string",
                                    "description": "成功：0; 失败：1001",
                                    "required": true
                                }
                            }
                        }
                    }
                }
            }
        },

        "/news": {
            "post": {
                "tags": ["News"],
                "summary": "新增资讯",
                "parameters": [
                    {
                        "$ref": "#/definitions/Token"
                    },
                    {
                        "in": "body",
                        "name": "body",
                        "description": "新增的资讯",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "name": {
                                    "type": "string",
                                    "description": "资讯标题"
                                },
                                "source": {
                                    "type": "string",
                                    "description": "资讯来源"
                                },
                                "content": {
                                    "type": "string",
                                    "description": "正文, 保留'\n'"
                                },
                                "imgUrls": {
                                    "type": "array",
                                    "description": "图片文件信息",
                                    "items": {
                                        "type": "string",
                                        "description": "图片URL"
                                    }
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "新增资讯成功，返回资讯item",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "msg": {
                                    "type": "string",
                                    "description": "成功信息；失败信息"
                                },
                                "code": {
                                    "type": "string",
                                    "description": "成功编码 0；失败编码",
                                    "required": true
                                },
                                "data": {
                                    "type": "integer",
                                    "description": "资讯 ID"
                                }
                            }
                        }
                    }
                }
            }
        },

        "/news/deletion": {
            "post": {
                "tags": ["News"],
                "summary": "批量删除资讯",
                "parameters": [
                    {
                        "$ref": "#/definitions/Token"
                    },
                    {
                        "in": "body",
                        "name": "deletion",
                        "type": "object",
                        "required": true,
                        "description": "资讯ID数组",
                        "schema": {
                            "type": "array",
                            "items": {
                                "type": "integer",
                                "description": "资讯 ID"
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "删除成功，返回结果",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "msg": {
                                    "type": "string",
                                    "description": "成功：已删除；失败：[资讯名称, ...] 删除失败"
                                },
                                "code": {
                                    "type": "string",
                                    "description": "成功：0; 失败：1001",
                                    "required": true
                                }
                            }
                        }
                    }
                }
            }
        },

        "/news/{informationId}": {
            "get": {
                "tags": ["News"],
                "summary": "获取资讯详情",
                "parameters": [
                    {
                        "$ref": "#/definitions/Token"
                    },
                    {
                        "in": "path",
                        "name": "informationId",
                        "required": true,
                        "type": "integer",
                        "description": "资讯ID"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "获取资讯详情成功",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "msg": {
                                    "type": "string",
                                    "description": "成功信息"
                                },
                                "code": {
                                    "type": "string",
                                    "description": "成功编码 0",
                                    "required": true
                                },
                                "data": {
                                    "$ref": "definitions/news/information-detail.json"
                                }
                            }
                        }
                    }
                }
            },
            "put": {
                "tags": ["News"],
                "summary": "行情资讯编辑",
                "parameters": [
                    {
                        "$ref": "#/definitions/Token"
                    },
                    {
                        "in": "path",
                        "name": "informationId",
                        "required": true,
                        "type": "integer",
                        "description": "资讯ID"
                    },
                    {
                        "in": "body",
                        "name": "body",
                        "description": "修改后的行情资讯详情",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "id": {
                                    "type": "integer",
                                    "description": "资讯ID"
                                },
                                "name": {
                                    "type": "string",
                                    "description": "资讯标题"
                                },
                                "source": {
                                    "type": "string",
                                    "description": "资讯来源"
                                },
                                "content": {
                                    "type": "string",
                                    "description": "问题正文, 保留'\n'"
                                },
                                "imgUrls": {
                                    "type": "array",
                                    "description": "图片文件信息",
                                    "items": {
                                        "type": "string",
                                        "description": "图片URL"
                                    }
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "行情资讯修改成功，返回资讯item",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "msg": {
                                    "type": "string",
                                    "description": "成功信息"
                                },
                                "code": {
                                    "type": "string",
                                    "description": "成功编码 0",
                                    "required": true
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
