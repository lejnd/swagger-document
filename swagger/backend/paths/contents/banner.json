{
    "swagger": "2.0",
    "paths": {
        "/banner/search": {
            "post": {
                "tags": ["Banner"],
                "summary": "获取Banner列表",
                "parameters": [
                    {
                        "$ref": "#/definitions/Token"
                    },
                    {
                        "in": "body",
                        "name": "body",
                        "description": "默认同一板块，按照序号顺序显示",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "Paging": {
                                    "$ref": "definitions/search/Paging.json"
                                },
                                "condition": {
                                    "type": "object",
                                    "properties": {
                                        "title": {
                                            "type": "string",
                                            "description": "模糊匹配banner名称"
                                        },
                                        "moduleType": {
                                            "type": "number",
                                            "description": "匹配 banner 所属的模块"
                                        },
                                        "dataState": {
                                            "type": "number",
                                            "description": "精准匹配数据状态，0有效，1无效，默认传-1取出所有"
                                        }
                                    }
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "获取Banner列表成功",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "msg": {
                                    "type": "string",
                                    "description": "成功信息"
                                },
                                "code": {
                                    "type": "string",
                                    "description": "成功编码 0",
                                    "required": true
                                },
                                "data": {
                                    "type": "object",
                                    "properties": {
                                        "Paging": {
                                            "$ref": "definitions/search/ResponsePaging.json"
                                        },
                                        "itemList": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "definitions/contents/banner-item.json"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/banner": {
            "post": {
                "tags": ["Banner"],
                "summary": "新增banner",
                "parameters": [
                    {
                        "$ref": "#/definitions/Token"
                    },
                    {
                        "in": "body",
                        "name": "body",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "title": {
                                    "type": "string",
                                    "description": "banner名称"
                                },
                                "moduleType": {
                                    "type": "number",
                                    "required": true,
                                    "description": "版块类型，1首页banner，2行情走势banner"
                                },
                                "sortNum": {
                                    "type": "number",
                                    "required": true,
                                    "description": "在该板块内的序号"
                                },
                                "imgUrl": {
                                    "type": "string",
                                    "description": "图片URL"
                                },
                                "pageType": {
                                    "type": "number",
                                    "description": "内页类型，0无内页，1地址跳转"
                                },
                                "linkType": {
                                    "type": "number",
                                    "description": "内页类型为地址跳转时的跳转类型，0供应详情，1求购详情"
                                },
                                "linkId": {
                                    "type": "integer",
                                    "description": "跳转的供求详情的ID"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "新增成功，在列表页返回结果",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "msg": {
                                    "type": "string",
                                    "description": "成功信息"
                                },
                                "code": {
                                    "type": "string",
                                    "description": "成功编码 0",
                                    "required": true
                                },
                                "data": {
                                    "type": "integer",
                                    "description": "banner ID"
                                }
                            }
                        }
                    }
                }
            }
        },

        "/banner/enabled": {
            "post": {
                "tags": ["Banner"],
                "summary": "批量启用",
                "parameters": [
                    {
                        "$ref": "#/definitions/Token"
                    },
                    {
                        "in": "body",
                        "name": "starter",
                        "type": "object",
                        "required": true,
                        "schema": {
                            "type": "array",
                            "items": {
                                "type": "integer",
                                "description": "Banner ID"
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "启动成功，返回结果",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "msg": {
                                    "type": "string",
                                    "description": "成功：已启动；失败：[banner名称, ...] 启动失败"
                                },
                                "code": {
                                    "type": "string",
                                    "description": "成功：0; 失败：1001",
                                    "required": true
                                }
                            }
                        }
                    }
                }
            }
        },

        "/banner/disabled": {
            "post": {
                "tags": ["Banner"],
                "summary": "批量禁用",
                "parameters": [
                    {
                        "$ref": "#/definitions/Token"
                    },
                    {
                        "in": "body",
                        "name": "closer",
                        "type": "object",
                        "required": true,
                        "schema": {
                            "type": "array",
                            "items": {
                                "type": "integer",
                                "description": "Banner ID"
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "禁用成功，返回结果",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "msg": {
                                    "type": "string",
                                    "description": "成功：已禁用；失败：[banner名称, ...] 禁用失败"
                                },
                                "code": {
                                    "type": "string",
                                    "description": "成功：0; 失败：1001",
                                    "required": true
                                }
                            }
                        }
                    }
                }
            }
        },

        "/banner/{bannerId}": {
            "get": {
                "tags": ["Banner"],
                "summary": "获取banner详情",
                "parameters": [
                    {
                        "$ref": "#/definitions/Token"
                    },
                    {
                        "in": "path",
                        "name": "bannerId",
                        "required": true,
                        "type": "integer",
                        "description": "banner ID"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "获取banner详情成功",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "msg": {
                                    "type": "string",
                                    "description": "成功信息"
                                },
                                "code": {
                                    "type": "string",
                                    "description": "成功编码 0",
                                    "required": true
                                },
                                "data": {
                                    "$ref": "definitions/contents/banner-detail.json"
                                }
                            }
                        }
                    }
                }
            },
            "put": {
                "tags": ["Banner"],
                "summary": "编辑Banner",
                "parameters": [
                    {
                        "$ref": "#/definitions/Token"
                    },
                    {
                        "in": "path",
                        "name": "bannerId",
                        "required": true,
                        "type": "integer",
                        "description": "banner ID"
                    },
                    {
                        "in": "body",
                        "name": "body",
                        "description": "编辑后的banner",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "title": {
                                    "type": "string",
                                    "description": "banner名称"
                                },
                                "moduleType": {
                                    "type": "number",
                                    "description": "版块类型，1首页banner，2行情走势banner"
                                },
                                "sortNum": {
                                    "type": "number",
                                    "description": "在该板块内的序号"
                                },
                                "imgUrl": {
                                    "type": "string",
                                    "description": "图片URL"
                                },
                                "pageType": {
                                    "type": "number",
                                    "description": "内页类型，0无内页，1地址跳转"
                                },
                                "linkType": {
                                    "type": "number",
                                    "description": "内页类型为地址跳转时的跳转类型，0供应详情，1求购详情"
                                },
                                "linkId": {
                                    "type": "integer",
                                    "description": "跳转的供求详情的ID"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "修改成功，在列表页返回修改结果",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "msg": {
                                    "type": "string",
                                    "description": "成功信息"
                                },
                                "code": {
                                    "type": "string",
                                    "description": "成功编码 0",
                                    "required": true
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
