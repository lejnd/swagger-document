{
    "swagger": "2.0",
    "paths": {
        "/backstage-users/login": {
            "post": {
                "summary": "用户登录接口",
                "tags": ["BackStageUser"],
                "parameters": [{
                    "in": "body",
                    "name": "body",
                    "required": true,
                    "schema": {
                        "type": "object",
                        "properties": {
                            "userName": {
                                "type": "string",
                                "description": "用户名／登录名"
                            },
                            "password": {
                                "type": "string",
                                "description": "密码"
                            },
                            "keepLogin": {
                                "type": "boolean",
                                "description": "保持登录"
                            },
                            "sessionId": {
                                "type": "string",
                                "description": "验证码编号"
                            },
                            "imgCode": {
                                "type": "string",
                                "description": "图形验证码"
                            }
                        }
                    }
                }],
                "responses": {
                    "200": {
                        "description": "登录成功",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "token": {
                                    "type": "string",
                                    "description": "已登录凭据"
                                },
                                "userInfo": {
                                    "type": "object",
                                    "description": "登录用户信息",
                                    "properties": {
                                        "userId": {
                                            "type": "number",
                                            "description": "用户ID"
                                        },
                                        "userName": {
                                            "type": "string",
                                            "description": "用户名／登录名"
                                        },
                                        "userDisplayName": {
                                            "type": "string",
                                            "description": "用户显示名称"
                                        },
                                        "departmentName": {
                                            "type": "string",
                                            "description": "部门名称"
                                        },
                                        "phoneNumber": {
                                            "type": "string",
                                            "description": "电话号码"
                                        },
                                        "email": {
                                            "type": "string",
                                            "description": "邮箱"
                                        },
                                        "companyId": {
                                            "type": "number",
                                            "description": "用户所属公司ID"
                                        },
                                        "companyName": {
                                            "type": "string",
                                            "description": "用户所属公司名称"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "1001": {
                        "description": "用户名密码错误"
                    }
                }
            }
        },
        "/backstage-users/authorities": {
            "get": {
                "tags": ["BackStageUser"],
                "summary": "获取用户权限列表",
                "parameters": [{
                    "$ref": "#/definitions/Token"
                }],
                "responses": {
                    "200": {
                        "description": "权限列表",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "permissionKeyList": {
                                    "type": "array",
                                    "items": {
                                        "type": "string",
                                        "description": "权限Key"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/backstage-users/img-captcha": {
            "post": {
                "tags": ["BackStageUser"],
                "summary": "获取图形验证码",
                "parameters": [],
                "responses": {
                    "200": {
                        "description": "权限列表",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "session": {
                                    "type": "string",
                                    "description": "验证码编号"
                                },
                                "img": {
                                    "type": "string",
                                    "description": "验证码图片base64字符串"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}