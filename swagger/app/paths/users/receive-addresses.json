{
    "swagger": "2.0",
    "paths": {
        "/users/receive-addresses": {
            "get": {
                "tags": ["Users"],
                "summary": "获取已有地址列表",
                "parameters": [{
                    "$ref": "#/parameters/Token"
                }],
                "responses": {
                    "200": {
                        "description": "获取成功",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "data": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/definitions/AddressItem"
                                    }
                                },
                                "code": {
                                    "type": "integer"
                                },
                                "msg": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": ["Users"],
                "summary": "新增地址",
                "parameters": [{
                    "$ref": "#/parameters/Token"
                }, {
                    "in": "body",
                    "name": "body",
                    "required": true,
                    "schema": {
                        "$ref": "#/definitions/AddressEdit"
                    }
                }],
                "responses": {
                    "200": {
                        "description": "新增成功"
                    }
                }
            }
        },
        "/users/receive-addresses/{id}": {
            "put": {
                "tags": ["Users"],
                "summary": "修改地址",
                "parameters": [{
                    "$ref": "#/parameters/Token"
                }, {
                    "in": "path",
                    "name": "id",
                    "required": true,
                    "type": "integer",
                    "description": "地址ID"
                }, {
                    "in": "body",
                    "name": "body",
                    "required": true,
                    "schema": {
                        "$ref": "#/definitions/AddressEdit"
                    }
                }],
                "responses": {
                    "200": {
                        "description": "修改成功"
                    }
                }
            },
            "delete": {
                "tags": ["Users"],
                "summary": "删除地址",
                "parameters": [{
                    "$ref": "#/parameters/Token"
                }, {
                    "in": "path",
                    "name": "id",
                    "required": true,
                    "type": "integer",
                    "description": "地址ID"
                }],
                "responses": {
                    "200": {
                        "description": "删除成功"
                    }
                }
            }
        },
        "/users/receive-addresses/default": {
            "put": {
                "tags": ["Users"],
                "summary": "设为默认地址",
                "parameters": [{
                    "$ref": "#/parameters/Token"
                }, {
                    "in": "body",
                    "name": "body",
                    "required": true,
                    "schema": {
                        "type": "object",
                        "properties": {
                            "addressId": {
                                "type": "integer",
                                "description": "地址ID"
                            }
                        }
                    }
                }],
                "responses": {
                    "200": {
                        "description": "设置成功"
                    }
                }
            }
        }
    }
}
