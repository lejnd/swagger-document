{
    "swagger": "2.0",
    "paths": {
        "/quotes": {
            "post": {
                "tags": ["Quotes"],
                "summary": "我要报价",
                "parameters": [{
                    "$ref": "#/parameters/Token"
                }, {
                    "in": "body",
                    "name": "body",
                    "required": true,
                    "schema": {
                        "type": "object",
                        "properties": {
                            "demandId": {
                                "type": "integer",
                                "description": "需求ID"
                            },
                            "price": {
                                "type": "integer",
                                "description": "报价的价格"
                            }
                        }
                    }
                }],
                "responses": {
                    "200": {
                        "description": "报价成功"
                    }
                }
            }
        },
        "/quotes/query": {
            "post": {
                "tags": ["Quotes"],
                "summary": "报价列表",
                "parameters": [{
                    "$ref": "#/parameters/Token"
                }, {
                    "in": "body",
                    "name": "body",
                    "required": true,
                    "schema": {
                        "type": "object",
                        "properties": {
                            "type": {
                                "type": "integer",
                                "description": "0: 我的报价, 1: 收到报价"
                            }
                        }
                    }
                }],
                "responses": {
                    "200": {
                        "description": "获取成功",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "data": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "demandId": {
                                                "type": "integer",
                                                "description": "求购ID"
                                            },
                                            "title": {
                                                "type": "string",
                                                "description": "标题"
                                            },
                                            "specifications": {
                                                "type": "array",
                                                "items": {
                                                    "$ref": "#/definitions/SpecificationDetails"
                                                }
                                            },
                                            "originRegion": {
                                                "$ref": "#/definitions/RegionDetails",
                                                "description": "产地"
                                            },
                                            "receiveRegion": {
                                                "$ref": "#/definitions/RegionDetails",
                                                "description": "产地"
                                            },
                                            "quotesCount": {
                                                "type": "integer",
                                                "description": "报价条数"
                                            }
                                        }
                                    }
                                },
                                "code": {
                                    "type": "integer"
                                },
                                "msg": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/quotes/{id}": {
            "get": {
                "tags": ["Quotes"],
                "summary": "报价详情",
                "parameters": [{
                    "in": "path",
                    "name": "id",
                    "required": true,
                    "type": "integer",
                    "description": "报价ID"
                }],
                "responses": {
                    "200": {
                        "description": "获取成功",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "data": {
                                    "type": "object",
                                    "properties": {
                                        "demand": {
                                            "$ref": "#/definitions/DemandDetails",
                                            "description": "求购信息"
                                        },
                                        "myQuote": {
                                            "$ref": "#/definitions/Quote",
                                            "description": "我的报价，如果是我的报价，则返回该项，如果是收到的报价，则不需要返回该项"
                                        }
                                    }
                                },
                                "code": {
                                    "type": "integer"
                                },
                                "msg": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
